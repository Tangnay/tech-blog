<div>
  <br />
  <article class="card">
    <div
      class="card-header bg-dark text-white d-flex justify-content-lg-between"
      style="width: 1000px;"
    >
      <h2>{{post.title}}</h2>
      <div>
        Posted by
        {{post.User.username}}
        on
        {{format_date post.createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{post.body}}
    </div>
  </article>

  {{#if post.Comments}}
    <section class="card">
      <div class="card-header bg-dark text-white">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each post.Comments}}
          <div>
            <p>
              {{body}}
            </p>
            <p>
              &mdash;
              {{User.username}},
              {{format_date createdAt}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header bg-dark text-white">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <div class="mb-3">
        <label class="form-label" for="comment-body">Comment</label>
        <textarea name="comment-body" class="form-control" rows="3"></textarea>
      </div>

      <button type="submit" class="btn btn-dark">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>