<div class="card">
  <div
    class="card-header bg-dark text-white d-flex justify-content-lg-between"
    style="width: 1000px;"
  >
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <div class="mb-3">
      <label class="form-label" for="post-title">Title</label>
      <input type="text" name="post-title" class="form-control" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="post-body">Content</label>
      <textarea
        name="post-body"
        rows="3"
        class="form-control"
      >{{post.body}}</textarea>
    </div>

    <button type="submit" class="btn btn-dark">Create</button>
  </form>
</div>

<script src="/js/new.js"></script>