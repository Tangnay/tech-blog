<div class="card" style="width: 1000px;">
  <div class="card-header bg-dark text-white">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" id="post-id" value="{{post.id}}" />

    <div class="mb-3">
      <label for="post-title" class="form-label">Title</label>
      <input
        type="text"
        id="post-title"
        class="form-control"
        value="{{post.title}}"
      />
    </div>
    <div class="mb-3">
      <label class="form-label" for="post-body">Content</label>
      <textarea
        id="post-body"
        rows="3"
        class="form-control"
      >{{post.body}}</textarea>
    </div>

    <button type="submit" class="btn btn-dark text-white">Update</button>

    <button
      type="button"
      id="delete-btn"
      class="btn btn-danger text-white"
    >Delete</button>
  </form>
</div>